{
  "name": "react-reducer-table",
  "version": "1.0.3",
  "description": "A library to provide a fast data grid to React apps based on the useReducer hook",
  "keywords": [
    "react",
    "table",
    "grid",
    "datagrid",
    "reducer",
    "useReducer"
  ],
  "homepage": "http://github.com/ulgaal/react-reducer-table",
  "bugs": {
    "url": "https://github.com/ulgaal/react-reducer-table/issues"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Ulrich Gaal",
    "email": "react-reducer-table@coder-tribe.ovh"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "module": "lib/index.js",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/ulgaal/react-reducer-table.git"
  },
  "scripts": {
    "build": "babel --out-dir lib --presets=@babel/preset-react,@babel/preset-env src ; rsync -av src/*.css lib",
    "test": "node config/test.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "doc": "scripts/doc.sh"
  },
  "dependencies": {
    "lodash.isequal": "^4.5.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@storybook/addon-actions": "^5.3.13",
    "@storybook/addon-knobs": "^5.3.13",
    "@storybook/addon-links": "^5.3.13",
    "@storybook/addon-storysource": "^5.3.13",
    "@storybook/addons": "^5.3.13",
    "@storybook/react": "^5.3.13",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "cross-env": "^7.0.0",
    "faker": "^4.1.0",
    "jest": "^25.1.0",
    "promisify-node": "^0.5.0",
    "prop-types": "^15.7.2",
    "react": "^16.11.0",
    "react-docgen": "^5.2.1",
    "react-dom": "^16.11.0",
    "standard": "^14.3.1",
    "storybook-readme": "^5.0.8",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^8.1.3",
    "react-bootstrap": "^1.0.0-beta.16",
    "react-select": "^3.0.8",
    "@ulgaal/react-infotip": "^1.0.2"
  },
  "peerDependencies": {
    "prop-types": "^15.x",
    "react": "^16.x",
    "react-dom": "^16.x"
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx}"
    ],
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/config/jest/transformer-babel.js"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
