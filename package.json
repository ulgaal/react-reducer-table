{
  "name": "react-reducer-table",
  "version": "1.3.1",
  "description": "A library to provide a fast data grid to React apps based on the useReducer hook",
  "keywords": [
    "react",
    "table",
    "grid",
    "datagrid",
    "reducer",
    "useReducer"
  ],
  "homepage": "http://github.com/ulgaal/react-reducer-table",
  "bugs": {
    "url": "https://github.com/ulgaal/react-reducer-table/issues"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Ulrich Gaal",
    "email": "react-reducer-table@coder-tribe.ovh"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "module": "lib/index.js",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/ulgaal/react-reducer-table.git"
  },
  "scripts": {
    "build": "babel --out-dir lib src ; rsync -av src/*.css lib",
    "test": "node config/test.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "doc": "scripts/doc.sh"
  },
  "dependencies": {
    "lodash.isequal": "^4.5.0",
    "resize-observer-polyfill": "^1.5.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@storybook/addon-actions": "^6.1.15",
    "@storybook/addon-knobs": "^6.1.15",
    "@storybook/addon-links": "^6.1.15",
    "@storybook/addon-storysource": "^6.1.15",
    "@storybook/addons": "^6.1.15",
    "@storybook/react": "^6.1.15",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "bootstrap": "^4.6.0",
    "core-js": "^3.8.3",
    "cross-env": "^7.0.3",
    "faker": "^5.1.0",
    "jest": "^26.6.3",
    "promisify-node": "^0.5.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-docgen": "^5.3.1",
    "react-dom": "^17.0.1",
    "react-draggable": "^4.4.3",
    "react-resizable": "^1.11.0",
    "standard": "^16.0.3",
    "storybook-readme": "^5.0.9",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^12.6.2",
    "react-bootstrap": "^1.4.3",
    "react-select": "^4.0.0",
    "@ulgaal/react-infotip": "^1.2.1"
  },
  "peerDependencies": {
    "prop-types": "^15.x",
    "react": "^17.x",
    "react-dom": "^17.x"
  },
  "babel": {
    "presets": [
      "@babel/preset-react",
      [
        "@babel/preset-env",
        {
          "targets": "current node"
        }
      ]
    ]
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx}"
    ],
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/config/jest/transformer-babel.js"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
